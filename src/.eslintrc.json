{
  "extends": ["react-app", "airbnb"],
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "env": {
    "node": true,
    "commonjs": true,
    "browser": true,
    "es6": true
  },
  "globals": {
    "process": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
